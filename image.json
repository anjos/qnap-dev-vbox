{
  "variables": {
    "debian_version": "8.7.1",
    "netinst_md5sum": "453312bf56fc45669fec5ebc0f025ac7",
    "username": "qnap",
    "build": "2017"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=idiap.ch <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 32768,
      "guest_os_type": "Debian_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum_type": "md5",
      "iso_checksum": "{{user `netinst_md5sum`}}",
      "iso_url": "http://debian.ethz.ch/debian-cd/{{user `debian_version`}}/i386/iso-cd/debian-{{user `debian_version`}}-i386-netinst.iso",
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `username`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '{{user `username`}}'|sudo -S /sbin/shutdown -hP now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "output_directory": "builds",
      "vm_name": "{{user `username`}}-{{user `build`}}",
      "format": "ova",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ],
        [ "modifyvm", "{{.Name}}", "--vram", "64" ],
        [ "modifyvm", "{{.Name}}", "--accelerate3d", "on" ]
      ],
      "keep_registered": true,
      "skip_export": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `username`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/update.sh",
        "scripts/networking.sh",
        "scripts/sudoers.sh",
        "scripts/vbaddguest.sh",
        "scripts/conda.sh",
        "scripts/toolchain.sh",
        "scripts/cleanup.sh"
      ],
      "only": ["virtualbox-iso"]
    },
    {
      "type": "file",
      "source": "dotfiles",
      "destination": "/home/qnap",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cmdline.sh"
      ],
      "only": ["virtualbox-iso"]
    }
  ]
}
